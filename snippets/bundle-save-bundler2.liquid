{% comment %}
  Bundle & Save Component - Bundler2 Template
  Handles pillow and bed base bundling with cart integration
{% endcomment %}

{%- if section.settings.enable_bundle -%}
<div class="bundle-save-container" id="bundle-save-bundler2">
  <!-- Bundle Header -->
  <div class="bundle-save-header">
    <h3 class="bundle-save-title">{{ section.settings.bundle_title | default: 'Bundle & Save' }}</h3>
    <p class="bundle-save-subtitle">{{ section.settings.bundle_subtitle | default: 'Add to cart to unlock the best deal' }}</p>
  </div>

  <!-- Status Messages (hidden by default) -->
  <div class="bundle-status-messages" style="display: none;">
    <div class="bundle-success-message" style="display: none;"></div>
    <div class="bundle-error-message" style="display: none;"></div>
  </div>



  <!-- Bundle Options Grid -->
  <div class="bundle-options-grid">
    
    <!-- Pillow Bundle Section -->
    {%- if section.settings.enable_pillow_bundle -%}
    <div class="bundle-option pillow-bundle" role="group" aria-labelledby="pillow-bundle-title">
    <div class="bundle-option-header">
      <span class="bundle-option-title" id="pillow-bundle-title">Add Pillow</span>
    </div>
    
    <div class="bundle-option-details" id="pillow-options">
      <div class="bundle-product-image-full">
        <img src="https://cdn.shopify.com/s/files/1/0152/7916/1444/files/pillow-white.png?v=1754956385" alt="{{ pillow_product.title }}" id="pillow-image" loading="lazy">
      </div>
      {%- assign pillow_product = all_products[section.settings.pillow_product] -%}
      <h4 class="bundle-product-title">{{ pillow_product.title }}</h4>
      <div class="bundle-product-price" id="pillow-price">
        {%- assign standard_variant = pillow_product.variants | where: "title", "Standard/Queen" | first -%}
        {%- if standard_variant -%}
          {{ standard_variant.price | money }}
        {%- else -%}
          $97.99
        {%- endif -%}
      </div>
      
      <!-- Hidden variant data -->
      <div class="pillow-variants" style="display: none;">
        {%- for variant in pillow_product.variants -%}
          <div class="variant-data"
               data-id="{{ variant.id }}"
               data-size="{{ variant.option1 | downcase }}"
               data-price="{{ variant.price | money_without_trailing_zeros }}"
               data-available="{{ variant.available }}">
          </div>
        {%- endfor -%}
      </div>
      
      <div class="bundle-controls">
        <div class="bundle-quantity-selector">
          <label class="bundle-field-label" for="pillow-quantity">Pillow Quantity:</label>
          <div class="quantity-input-wrapper" role="group" aria-labelledby="pillow-quantity-label">
            <button type="button" class="quantity-btn quantity-minus" data-target="pillow-quantity" aria-label="Decrease pillow quantity">-</button>
            <input type="number" id="pillow-quantity" class="quantity-input" value="1" min="1" max="10" aria-describedby="pillow-quantity-help">
            <button type="button" class="quantity-btn quantity-plus" data-target="pillow-quantity" aria-label="Increase pillow quantity">+</button>
          </div>
          <span class="sr-only" id="pillow-quantity-help">Select quantity between 1 and 10 pillows</span>
        </div>

        <div class="bundle-size-selector">
          <fieldset>
            <legend class="bundle-field-label">Pillow Size:</legend>
            <div class="bundle-size-options" role="radiogroup" aria-labelledby="pillow-size-legend">
              {%- assign pillow_product = all_products[section.settings.pillow_product] -%}
              {%- assign standard_variant = pillow_product.variants | where: "title", "Standard/Queen" | first -%}
              {%- assign king_variant = pillow_product.variants | where: "title", "King" | first -%}
              
              <label class="radio-container">
                <input type="radio" name="pillow-size" value="standard" class="bundle-radio" checked 
                       data-price="{%- if standard_variant -%}{{ standard_variant.price | money }}{%- else -%}$97.99{%- endif -%}"
                       aria-describedby="pillow-size-standard-desc">
                <span class="radio-checkmark" aria-hidden="true"></span>
                <span class="radio-label">Standard</span>
                <span class="sr-only" id="pillow-size-standard-desc">Standard size pillow, suitable for Twin, Full, and Queen mattresses</span>
              </label>
              <label class="radio-container">
                <input type="radio" name="pillow-size" value="king" class="bundle-radio"
                       data-price="{%- if king_variant -%}{{ king_variant.price | money }}{%- else -%}$127.99{%- endif -%}"
                       aria-describedby="pillow-size-king-desc">
                <span class="radio-checkmark" aria-hidden="true"></span>
                <span class="radio-label">King</span>
                <span class="sr-only" id="pillow-size-king-desc">King size pillow, suitable for King and California King mattresses</span>
              </label>
            </div>
          </fieldset>
        </div>
      </div>
      
      <!-- Pillow Add Button -->
      <button type="button" class="bundle-add-button pillow-add-button" id="pillow-add-button">
        ADD +
      </button>
    </div>
    </div>
    {%- endif -%}

    <!-- Bed Base Bundle Section -->
    {%- if section.settings.enable_bedbase_bundle -%}
    <div class="bundle-option bedbase-bundle">
    <div class="bundle-option-header">
      <span class="bundle-option-title">Add Bed Base</span>
    </div>
    
    <div class="bundle-option-details" id="bedbase-options">

        <img src="https://cdn.shopify.com/s/files/1/0152/7916/1444/files/adjustable-base-tn.png?v=1754993620" alt="Bed Base" id="bedbase-image" loading="lazy">
      </div>
      <div class="bundle-product-meta">
        <h4 class="bundle-product-title" id="bedbase-title">Adjustable Base</h4>
        <div class="bundle-product-price" id="bedbase-price">$899.00</div>
      </div>
      
      <div class="bundle-controls">
        <div class="bundle-bedbase-selector">
          <fieldset>
            <legend class="bundle-field-label">Base Type:</legend>
            <div class="bundle-bedbase-options" role="radiogroup" aria-labelledby="bedbase-type-legend">
            <!-- Adjustable Base -->
            {%- assign adjustable_base = all_products[section.settings.adjustable_base_product] -%}
            <label class="radio-container">
              <input type="radio" name="bedbase-type" value="adjustable" class="bundle-radio bedbase-radio" checked
                     data-product-id="7599628746928"
                     data-product-title="Adjustable Base"
                     data-product-image="https://cdn.shopify.com/s/files/1/0152/7916/1444/files/adjustable-base-tn.png?v=1754993620">
              <span class="radio-checkmark" aria-hidden="true"></span>
              <span class="radio-label">Adjustable Base</span>
            </label>
            
            <!-- Wooden Platform -->
            {%- assign wooden_platform = all_products[section.settings.platform_base_product] -%}
            <label class="radio-container">
              <input type="radio" name="bedbase-type" value="platform" class="bundle-radio bedbase-radio"
                     data-product-id="7569218633904"
                     data-product-title="Wooden Platform"
                     data-product-image="https://cdn.shopify.com/s/files/1/0152/7916/1444/files/wooden-platform.png?v=1754993526">
              <span class="radio-checkmark" aria-hidden="true"></span>
              <span class="radio-label">Wooden Platform</span>
            </label>
            
            <!-- HD Riser Frame -->
            {%- assign riser_frame = all_products[section.settings.riser_base_product] -%}
            <label class="radio-container">
              <input type="radio" name="bedbase-type" value="riser" class="bundle-radio bedbase-radio"
                     data-product-id="7725286883504"
                     data-product-title="HD Riser Frame"
                     data-product-image="https://cdn.shopify.com/s/files/1/0152/7916/1444/files/hd-riser.png?v=1754993527">
              <span class="radio-checkmark" aria-hidden="true"></span>
              <span class="radio-label">HD Riser Frame</span>
            </label>

            <!-- Hidden variant data for bed bases -->
            <div class="bedbase-variants" style="display: none;">
              <!-- Adjustable Base Variants -->
              <div class="adjustable-base-variants">
                <div class="variant-data" data-size="twin xl" data-price="778.99" data-type="adjustable" data-id="7599628746928"></div>
                <div class="variant-data" data-size="queen" data-price="898.99" data-type="adjustable" data-id="7599628746928"></div>
                <div class="variant-data" data-size="split king - 2 txl" data-price="1448.99" data-type="adjustable" data-id="7599628746928"></div>
              </div>

              <!-- Wooden Platform Variants -->
              <div class="platform-base-variants">
                <div class="variant-data" data-size="full" data-price="328.99" data-type="platform" data-id="7569218633904"></div>
                <div class="variant-data" data-size="queen" data-price="348.99" data-type="platform" data-id="7569218633904"></div>
                <div class="variant-data" data-size="king" data-price="398.99" data-type="platform" data-id="7569218633904"></div>
              </div>

              <!-- HD Riser Frame Variants -->
              <div class="riser-base-variants">
                <div class="variant-data" data-size="twin" data-price="228.99" data-type="riser" data-id="7725286883504"></div>
                <div class="variant-data" data-size="twin xl" data-price="248.99" data-type="riser" data-id="7725286883504"></div>
                <div class="variant-data" data-size="full" data-price="278.99" data-type="riser" data-id="7725286883504"></div>
                <div class="variant-data" data-size="queen" data-price="298.99" data-type="riser" data-id="7725286883504"></div>
                <div class="variant-data" data-size="king" data-price="398.99" data-type="riser" data-id="7725286883504"></div>
              </div>
            </div>

            <!-- Debug Info (will be hidden) -->
            <div style="display: none;" class="debug-info">
              Adjustable Base: {{ adjustable_base.title }} - {{ adjustable_base.price | money_without_trailing_zeros }}<br>
              Wooden Platform: {{ wooden_platform.title }} - {{ wooden_platform.price | money_without_trailing_zeros }}<br>
              Riser Frame: {{ riser_frame.title }} - {{ riser_frame.price | money_without_trailing_zeros }}
            </div>
          </div>
        </div>
        
        <!-- Size is handled automatically -->
      </div>
      
      <!-- Bed Base Add Button -->
      <button type="button" class="bundle-add-button bedbase-add-button" id="bedbase-add-button">
        ADD +
      </button>
    </div>
    </div>
    {%- endif -%}
    
  </div> <!-- End bundle-options-grid -->

  <!-- Hidden Product Data -->
  <div class="bundle-product-data" style="display: none;">
    <!-- Pillow product data -->
    {%- assign pillow_product = all_products[section.settings.pillow_product] -%}
    {%- assign standard_variant = pillow_product.variants | where: "title", "Standard" | first -%}
    {%- assign king_variant = pillow_product.variants | where: "title", "King" | first -%}
    <div id="pillow-product-data" 
         data-product-id="{{ pillow_product.id }}"
         data-handle="{{ pillow_product.handle }}"
         data-standard-price="{{ standard_variant.price | money }}"
         data-king-price="{{ king_variant.price | money }}">
    </div>
    
    <!-- Bed base product data -->
    <div id="bedbase-adjustable-data" 
         data-product-id="7599628746928"

{% comment %}
  Bundle & Save Component - Bundler2 Template
  Handles pillow and bed base bundling with cart integration
{% endcomment %}

{%- if section.settings.enable_bundle -%}
<div class="bundle-save-container" id="bundle-save-bundler2">
  <!-- Bundle Header -->
  <div class="bundle-save-header">
    <h3 class="bundle-save-title">{{ section.settings.bundle_title | default: 'Bundle & Save' }}</h3>
    <p class="bundle-save-subtitle">{{ section.settings.bundle_subtitle | default: 'Add to cart to unlock the best deal' }}</p>
  </div>

  <!-- Status Messages (hidden by default) -->
  <div class="bundle-status-messages" style="display: none;">
    <div class="bundle-success-message" style="display: none;"></div>
    <div class="bundle-error-message" style="display: none;"></div>
  </div>

  <!-- Bundle Options Grid -->
  <div class="bundle-options-grid">
    
    <!-- Pillow Bundle Section -->
    {%- if section.settings.enable_pillow_bundle -%}
    <div class="bundle-option pillow-bundle" role="group" aria-labelledby="pillow-bundle-title">
    <div class="bundle-option-header">
      <label class="toggle-container">
        <input type="checkbox" class="toggle-input bundle-checkbox" id="add-pillow" data-bundle-type="pillow" aria-describedby="pillow-bundle-description">
        <span class="toggle-slider" aria-hidden="true"></span>
        <span class="bundle-option-title" id="pillow-bundle-title">Add Pillow</span>
      </label>
      <span class="sr-only" id="pillow-bundle-description">Select to add a pillow to your bundle with size and quantity options</span>
    </div>
    
    <div class="bundle-option-details" id="pillow-options">
      <div class="bundle-product-info">
        {%- assign pillow_product = section.settings.pillow_product -%}
        {%- if pillow_product -%}
        <div class="bundle-product-image">
          <img src="{{ pillow_product.featured_image | image_url: width: 100 }}" alt="{{ pillow_product.title }}" id="pillow-image" loading="lazy">
        </div>
        <div class="bundle-product-meta">
          <h4 class="bundle-product-title">{{ pillow_product.title }}</h4>
          <div class="bundle-product-price" id="pillow-price">{{ pillow_product.price | money }}</div>
        </div>
        {%- else -%}
        <div class="bundle-product-image">
          <img src="" alt="Pillow" id="pillow-image" loading="lazy">
        </div>
        <div class="bundle-product-meta">
          <h4 class="bundle-product-title">Select a pillow product in theme settings</h4>
          <div class="bundle-product-price" id="pillow-price">$0.00</div>
        </div>
        {%- endif -%}
      </div>
      
      <div class="bundle-controls">
        <div class="bundle-size-selector">
          <fieldset>
            <legend class="bundle-field-label">Pillow Size:</legend>
            <div class="bundle-size-options" role="radiogroup" aria-labelledby="pillow-size-legend">
              <label class="radio-container">
                <input type="radio" name="pillow-size" value="standard" class="bundle-radio" checked aria-describedby="pillow-size-standard-desc">
                <span class="radio-checkmark" aria-hidden="true"></span>
                <span class="radio-label">Standard</span>
                <span class="sr-only" id="pillow-size-standard-desc">Standard size pillow, suitable for Twin, Full, and Queen mattresses</span>
              </label>
              <label class="radio-container">
                <input type="radio" name="pillow-size" value="king" class="bundle-radio" aria-describedby="pillow-size-king-desc">
                <span class="radio-checkmark" aria-hidden="true"></span>
                <span class="radio-label">King</span>
                <span class="sr-only" id="pillow-size-king-desc">King size pillow, suitable for King and California King mattresses</span>
              </label>
            </div>
          </fieldset>
        </div>
        
        <div class="bundle-quantity-selector">
          <label class="bundle-field-label" for="pillow-quantity">Pillow Quantity:</label>
          <div class="quantity-input-wrapper" role="group" aria-labelledby="pillow-quantity-label">
            <button type="button" class="quantity-btn quantity-minus" data-target="pillow-quantity" aria-label="Decrease pillow quantity">-</button>
            <input type="number" id="pillow-quantity" class="quantity-input" value="1" min="1" max="10" aria-describedby="pillow-quantity-help">
            <button type="button" class="quantity-btn quantity-plus" data-target="pillow-quantity" aria-label="Increase pillow quantity">+</button>
          </div>
          <span class="sr-only" id="pillow-quantity-help">Select quantity between 1 and 10 pillows</span>
        </div>
      </div>
    </div>
    </div>
    {%- endif -%}

    <!-- Bed Base Bundle Section -->
    {%- if section.settings.enable_bedbase_bundle -%}
    <div class="bundle-option bedbase-bundle">
    <div class="bundle-option-header">
      <label class="toggle-container">
        <input type="checkbox" class="toggle-input bundle-checkbox" id="add-bedbase" data-bundle-type="bedbase">
        <span class="toggle-slider"></span>
        <span class="bundle-option-title">Add Bed Base</span>
      </label>
    </div>
    
    <div class="bundle-option-details" id="bedbase-options">
      <div class="bundle-product-info">
        <div class="bundle-product-image">
          <img src="" alt="Bed Base" id="bedbase-image" loading="lazy" style="display: none;">
        </div>
        <div class="bundle-product-meta">
          <h4 class="bundle-product-title" id="bedbase-title">Select a Bed Base</h4>
          <div class="bundle-product-price" id="bedbase-price">$0.00</div>
        </div>
      </div>
      
      <div class="bundle-controls">
        <div class="bundle-bedbase-selector">
          <label class="bundle-field-label">Base Type:</label>
          <div class="bundle-bedbase-options">
            {%- assign adjustable_product = section.settings.adjustable_base_product -%}
            {%- assign platform_product = section.settings.platform_base_product -%}
            {%- assign riser_product = section.settings.riser_base_product -%}
            
            {%- if adjustable_product -%}
            <label class="radio-container">
              <input type="radio" name="bedbase-type" value="adjustable" class="bundle-radio bedbase-radio" checked
                     data-product-id="{{ adjustable_product.id }}" 
                     data-product-handle="{{ adjustable_product.handle }}"
                     data-product-title="{{ adjustable_product.title }}"
                     data-product-price="{{ adjustable_product.price | money }}"
                     data-product-image="{{ adjustable_product.featured_image | image_url: width: 200 }}">
              <span class="radio-checkmark"></span>
              <span class="radio-label">{{ adjustable_product.title }}</span>
            </label>
            {%- endif -%}
            
            {%- if platform_product -%}
            <label class="radio-container">
              <input type="radio" name="bedbase-type" value="platform" class="bundle-radio bedbase-radio"
                     data-product-id="{{ platform_product.id }}" 
                     data-product-handle="{{ platform_product.handle }}"
                     data-product-title="{{ platform_product.title }}"
                     data-product-price="{{ platform_product.price | money }}"
                     data-product-image="{{ platform_product.featured_image | image_url: width: 200 }}">
              <span class="radio-checkmark"></span>
              <span class="radio-label">{{ platform_product.title }}</span>
            </label>
            {%- endif -%}
            
            {%- if riser_product -%}
            <label class="radio-container">
              <input type="radio" name="bedbase-type" value="riser" class="bundle-radio bedbase-radio"
                     data-product-id="{{ riser_product.id }}" 
                     data-product-handle="{{ riser_product.handle }}"
                     data-product-title="{{ riser_product.title }}"
                     data-product-price="{{ riser_product.price | money }}"
                     data-product-image="{{ riser_product.featured_image | image_url: width: 200 }}">
              <span class="radio-checkmark"></span>
              <span class="radio-label">{{ riser_product.title }}</span>
            </label>
            {%- endif -%}
          </div>
        </div>
        
        <div class="bundle-size-display">
          <label class="bundle-field-label">Size:</label>
          <span class="bundle-size-match" id="bedbase-size-display">Will match mattress size</span>
        </div>
      </div>
    </div>
    </div>
    {%- endif -%}
    
  </div> <!-- End bundle-options-grid -->

  <!-- Bundle Actions -->
  <div class="bundle-actions">
    <div class="bundle-actions-content">
      <button type="button" class="bundle-add-to-cart" id="bundle-add-to-cart">
        ADD BUNDLE TO CART
      </button>
    </div>
  </div>

  <!-- Hidden Product Data -->
  <div class="bundle-product-data" style="display: none;">
    <!-- Pillow product data -->
    <div id="pillow-product-data" 
         data-product-id="7608185880752"
         data-handle="dreamchill-quattro-pillow">
    </div>
    
    <!-- Bed base product data -->
    <div id="bedbase-adjustable-data" 
         data-product-id="7599628746928"
         data-handle="nest-wild-adjustable-base">
    </div>
    <div id="bedbase-platform-data" 
         data-product-id="7569218633904"
         data-handle="nest-wild-wooden-platform">
    </div>
    <div id="bedbase-riser-data" 
         data-product-id="7725286883504"
         data-handle="nest-wild-hd-riser-frame">
    </div>
  </div>
</div>
{%- endif -%}


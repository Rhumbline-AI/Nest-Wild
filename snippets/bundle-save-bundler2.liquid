<script>
document.addEventListener('DOMContentLoaded', function() {
  // Function to position reviews badge
  function positionReviewsBadge() {
    const reviewsWidget = document.getElementById('stamped-reviews-widget');
    if (reviewsWidget) {
      reviewsWidget.style.textAlign = 'left';
      reviewsWidget.style.transform = 'scale(0.9)';
      reviewsWidget.style.transformOrigin = 'left center';
      reviewsWidget.style.display = 'block';
      reviewsWidget.style.justifyContent = 'flex-start';
      reviewsWidget.style.width = 'fit-content';
      reviewsWidget.style.minWidth = '220px';
      reviewsWidget.style.maxWidth = '320px';
      reviewsWidget.style.margin = '0';
      reviewsWidget.style.padding = '0';
      reviewsWidget.style.maxHeight = '100%';
      reviewsWidget.style.overflow = 'visible';
      
      // Also target any child elements
      const childElements = reviewsWidget.querySelectorAll('*');
      childElements.forEach(function(element) {
        element.style.textAlign = 'left';
        element.style.maxHeight = '100%';
        element.style.overflow = 'visible';
        element.style.minWidth = '200px';
        element.style.maxWidth = '300px';
      });
      
      // Ensure the container has proper spacing
      const container = reviewsWidget.closest('.product-meta__reviews-badge');
      if (container) {
        container.style.overflow = 'visible';
        container.style.paddingBottom = '20px';
        container.style.position = 'relative';
        container.style.minWidth = '200px';
        container.style.maxWidth = '300px';
        container.style.textAlign = 'left';
        container.style.float = 'none';
        container.style.marginLeft = '0';
        container.style.marginRight = 'auto';
      }
    }
  }
  
  // Run immediately
  positionReviewsBadge();
  
  // Run again after a delay to catch dynamic loading
  setTimeout(positionReviewsBadge, 1000);
  setTimeout(positionReviewsBadge, 2000);
  setTimeout(positionReviewsBadge, 3000);
  
  // Also run when the window loads
  window.addEventListener('load', positionReviewsBadge);
});
